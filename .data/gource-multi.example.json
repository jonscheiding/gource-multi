{
  "repos": [
    {
      "repoPath": "../../repo-1",
      "label": "repo-1",
      "ref": "upstream/main",
      "filterLogs": {
        "pattern": "publish$",
        "invert": true
      }
    }
  ],
  "options": {
    "since": "7 days ago",
    "fakeInitialCommit": true,
    "showStats": true,
    "gourceArguments": ["--hide", "dirnames,filenames,root"],
    "ffmpegArguments": ["-vcodec", "libx264", "-pix_fmt", "yuv420p"],
    "output": "./.data/gource.mp4"
  }
}
